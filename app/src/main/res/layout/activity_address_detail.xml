<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.AddressDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/heebo_medium"
                android:text="EDIT ADDRESS"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/text_back_gray"
            android:fontFamily="@font/heebo_medium"
            android:padding="15dp"
            android:text="CONTACT DETAILS"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            app:boxStrokeColor="@color/gray"
            app:boxStrokeWidth="0.6dp"
            app:boxStrokeWidthFocused="0.9dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name*"
                android:padding="14dp"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:boxStrokeColor="@color/gray"
            app:boxStrokeWidth="0.6dp"
            app:boxStrokeWidthFocused="0.9dp"
            android:enabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No*"
                android:padding="14dp"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/text_back_gray"
            android:fontFamily="@font/heebo_medium"
            android:padding="15dp"
            android:text="ADDRESS"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:boxStrokeColor="@color/gray"
            app:boxStrokeWidth="0.6dp"
            app:boxStrokeWidthFocused="0.9dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pincode_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pin Code*"
                android:padding="14dp"
                android:textSize="14sp"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:boxStrokeColor="@color/gray"
            app:boxStrokeWidth="0.6dp"
            app:boxStrokeWidthFocused="0.9dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address (House No, Building, Street, Area)*"
                android:padding="14dp"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:boxStrokeColor="@color/gray"
            app:boxStrokeWidth="0.6dp"
            app:boxStrokeWidthFocused="0.9dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/locality_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Locality / Town"
                android:padding="14dp"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/city_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_shape"
                android:backgroundTint="@color/text_back_gray"
                android:padding="15dp"
                android:hint="CITY NAME"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/state_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_shape"
                android:backgroundTint="@color/text_back_gray"
                android:padding="15dp"
                android:hint="STATE NAME"
                android:textSize="13sp" />


        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/heebo"
        android:text="PROCEED TO CHECKOUT"
        app:cornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/red"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>